<div class="container">
  <div class="row">
    <div class="col-md-10 mx-auto mt-4 d-flex align-items-center">
      <!--一般会員のプロフィールイメージと、氏名を表示-->
      <%= image_tag @public_user.get_profile_image, class: "dedail-page-profile-image" %>
      <span class="text-white h4 ml-3"><%= @public_user.name_display %>さんの会員情報編集</span>
    </div>

    <div class="col-md-10 mt-3 mx-auto box p-5">

      <!--編集フォーム-->
      <%= form_with model: @public_user, url: information_public_public_users_path do |f| %>

      <!--プロフィール画像フォーム-->
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :profile_image, "プロフィール画像", class: "col-form-label text-white" %>
        </div>
        <div class="col-md-9">
          <%= f.file_field :profile_image, accept: "image/*", class: "col-6 form-control-sm text-white" %>
        </div>
      </div>

      <!--氏名のフォーム-->
      <div class="form-group row">
        <div class="col-md-3">
          <p class="col-form-label text-white">氏名</p>
        </div>
        <div class="col-md-9 d-flex">
          <%= f.text_field :last_name, placeholder: "性", class: "mr-4 form-control col-4" %>
          <%= f.text_field :first_name, placeholder: "名", class: "form-control col-4" %>
        </div>
      </div>

      <!--フリガナのフォーム-->
      <div class="form-group row">
        <div class="col-md-3">
          <p class="col-form-label text-white">フリガナ</p>
        </div>
        <div class="col-md-9 d-flex">
          <%= f.text_field :last_name_kana, placeholder: "セイ", class: "mr-4 form-control col-4" %>
          <%= f.text_field :first_name_kana, placeholder: "メイ", class: "form-control col-4" %>
        </div>
      </div>

      <!--ニックネームのフォーム-->
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :nickname, "ニックネーム", class: "col-form-label text-white" %>
        </div>
        <div class="col-md-9">
          <%= f.text_field :nickname, class: "form-control col-6" %>
        </div>
      </div>

      <!--自己紹介のフォーム-->
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :introduction, "自己紹介文", class: "col-form-label text-white" %>
        </div>
        <div class="col-md-9">
          <%= f.text_area :introduction, rows: "5", class: "form-control col-6" %>
        </div>
      </div>

      <!--メールアドレスのフォーム-->
      <div class="form-group row">
        <div class="col-md-3">
          <%= f.label :email, "メールアドレス", class: "col-form-label text-white" %>
        </div>
        <div class="col-md-9">
          <%= f.email_field :email, autocomplete: "email", class: "form-control col-6" %>
        </div>
      </div>

      <!--変更保存ボタン-->
      <div class="form-group row">
        <div class="col-md-3 text-center"></div>
        <div class="col-md-9 mt-3">
          <%= f.submit "変更を保存", class: "btn btn-success btn-follow col-4" %>
        </div>
      </div>
      <% end %>

      <!--退会ボタンの設置-->
      <div class="col-md-12 text-right">
        <%= link_to "退会する", unsubscribe_public_public_users_path, class: "btn btn-danger btn-red px-3" %>
      </div>
    </div>
  </div>
</div>