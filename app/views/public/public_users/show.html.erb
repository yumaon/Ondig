<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <div class="row">
        <%= image_tag @public_user.get_profile_image, class: "my-page-box-image" %>
      </div>
      <div class="row">
        <%= @public_user.nickname %>
      </div>
      <div class="row">
        <% if @public_user.introduction.present? %>
          <%= @public_user.introduction %>
        <% else %>
          自己紹介文は登録されてません。
        <% end %>
      </div>
      <div class="row">
        <%= link_to "登録情報編集", public_information_edit_path %>
      </div>
    </div>
  </div>
</div>