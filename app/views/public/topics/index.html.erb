<div class="container">
  <div class="row mt-3">
    <!--マイページサイドバーの表示-->
    <div class="col-lg-3">
      <%= render 'artist/topics/index_page_sidebar', public_user: @public_user, tag_lists: @tag_lists %>
    </div>

    <div class="col-lg-9">
      <div class="mt-3 mx-3">
        <h3 class="text-white">Topics</h3>
      </div>

      <div class="col-md-12 mt-2">
        <div class="row d-flex">
          <div class=" col-md-6 flex-fill">
          </div>
          <!--トピックス検索フォームの設置-->
          <div class="col-md-6 flex-fill">
            <%= render 'artist/topics/topics_search_form', keyword: @keyword, search_display: @search_display %>
          </div>
        </div>
      </div>

      <!--キーワード検索の際に、入力されたキーワードを表示させる-->
      <% if @keyword.present? %>
      <div class="mt-3 ml-3">
        <div class="">
          <span class="text-white">"<%= @keyword %>"の検索結果</span>
        </div>
      </div>
      <% end %>

      <!--タグ検索の際に、何のタグで検索したかを表示させる-->
      <% if @search_display.present? %>
      <div class="d-flex mt-3 ml-3">
        <div class="tags px-2">
          <span class="text-white"><%= @search_display %></span>
        </div>
        <span class="text-white ml-2">の関連Topics</span>
      </div>
      <% end %>

      <!--トピックス一覧の表示-->
      <%= render 'artist/topics/topic_list', topics: @topics %>

      <div class="col-md-12 d-flex justify-content-center mt-5">
        <div>
          <%= paginate @topics %>
        </div>
      </div>

    </div>
  </div>
</div>