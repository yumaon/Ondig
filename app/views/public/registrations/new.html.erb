<div class="container-fluid main-visual">
  <div class="row">
    <div class="col-md-6 login-form text-white py-5">

      <div class="text-center">
        <h4>一般会員 新規会員登録</h4>
      </div>

      <div class="row mt-5">
        <div class="col-md-10 mx-auto">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "public/shared/error_messages", resource: resource %>
          <div class="row">
            <!--氏名のフォーム-->
            <div class="col-md-3">
              <p class="col-form-label text-white">氏名</p>
            </div>
            <div class="form-row ml-2">
              <div class="form-group col-md-6">
                <%= f.text_field :last_name, autofocus: true, placeholder: "姓", class: "form-control" %>
              </div>
              <div class="form-group col-md-6">
                <%= f.text_field :first_name, placeholder: "名", class: "form-control" %>
              </div>
            </div>
          </div>

          <!--フリガナのフォーム-->
          <div class="row">
            <div class="col-md-3">
              <p class="col-form-label text-white">フリガナ</p>
            </div>
            <div class="form-row ml-2">
              <div class="form-group col-md-6">
                <%= f.text_field :last_name_kana, placeholder: "セイ", class: "form-control" %>
              </div>
              <div class="form-group col-md-6">
                <%= f.text_field :first_name_kana, placeholder: "メイ",class: "form-control" %>
              </div>
            </div>
          </div>

          <!--ニックネームのフォーム-->
          <div class="form-group row">
            <div class="col-md-3">
              <%= f.label :nickname, "ニックネーム", class: "col-form-label text-white" %>
            </div>
            <div class="col-md-9">
              <%= f.text_field :nickname, class: "form-control col-6" %>
            </div>
          </div>

          <!--メールアドレスのフォーム-->
          <div class="form-group row">
            <div class="col-md-3">
              <%= f.label :email, "メールアドレス", class: "col-form-label text-white" %>
            </div>
            <div class="col-md-9">
              <%= f.email_field :email, autocomplete: "email", placeholder: "example@example.com", class: "form-control col-6" %>
            </div>
          </div>


          <!--パスワード設定フォーム-->
          <div class="form-group row">
            <div class="col-md-3">
              <%= f.label :password, "パスワード", class: "col-form-label text-white" %>
            </div>
            <div class="col-md-9">
              <%= f.password_field :password, class: "form-control col-5" %>
            </div>
          </div>

          <!--パスワード（確認用）フォーム-->
          <div class="form-group row">
            <div class="col-md-3">
              <%= f.label :password_confirmation, "パスワード（確認用）", class: "col-form-label text-white" %>
            </div>
            <div class="col-md-9">
              <%= f.password_field :password_confirmation, class: "form-control col-5" %>
            </div>
          </div>

          <!--登録実行ボタン-->
          <div class="text-center">
            <%= f.submit "新規会員登録", class: "btn btn-info btn-green btn-lg px-5" %>
          </div>

          <% end %>
        </div>
      </div>
      <div class="text-right mt-4 mr-3">
        <%= link_to new_public_user_session_path, class: "btn btn-info btn-follow btn-sm px-3" do %>
          <span>会員登録がお済みの方はこちら</span>
        <% end %>
      </div>
    </div>
  </div>
</div>