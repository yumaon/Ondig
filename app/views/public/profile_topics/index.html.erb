<div class="container-fluid">
  <div class="row">
    <%= render 'artist/profiles/profile', artist_user: @artist_user %>
      <div class="row">
        <div class="col-lg-12 p-5">
          <h3 class="text-white">Topics</h3>
          <% if @topics.present? %>
            <!--取得したアーティストのトピックス一覧を表示-->
            <%= render 'artist/topics/topic_list', topics: @topics %>

            <div class="col-md-12 d-flex justify-content-center mt-5">
              <div>
                <%= paginate @topics %>
              </div>
            </div>

          <% else %>
            <div class="row">
              <p class="text-white mt-3">このArtistの表示できるTopicsはありません。</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>