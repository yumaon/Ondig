<div class="container">
  <div class="row mt-3">
    <div class="col-md-10 mx-auto text-white">
      <h3>Topics</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <!--トピックスの詳細を表示-->
      <%= render 'topic_show', topic: @topic %>
      <!--トピックスに紐づいているコメント一覧、コメント投稿フォームの表示-->
      <%= render 'topic_comment', topic: @topic, topic_comments_count: @topic_comments_count, topic_comments: @topic_comments, topic_comment: @topic_comment %>
    </div>
  </div>
</div>