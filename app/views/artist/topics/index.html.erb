<div class="container">
  <div class="row mt-3">
    <div class="col-lg-3">
      <%= render 'index_page_sidebar', artist_user: @artist_user, tag_lists: @tag_lists %>
    </div>

    <div class="col-lg-9">
      <div class="d-flex flex-fill">
        <div class="flex-fill">
          <h3 class="text-white">Topics</h3>
        </div>
        <div class="flex-fill text-right">
          <!--トピックス投稿ボタンの設置-->
          <%= render 'topic_create_button' %>
        </div>
      </div>
      <!--トピックス検索フォームの設置-->
      <%= render 'topics_search_form', keyword: @keyword, search_display: @search_display %>
      <!--トピックス一覧の表示-->
      <%= render 'topic_list', topics: @topics %>
    </div>
  </div>
</div>