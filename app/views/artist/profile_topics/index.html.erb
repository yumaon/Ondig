<div class="container-fluid">
  <div class="row">
    <%= render 'artist/profiles/profile', artist_user: @artist_user %>
      <div class="row">
        <div class="col-lg-12 p-5">
          <div class="d-flex flex-fill">
            <h3 class="text-white mr-5">Topics</h3>
            <% if artist_user_signed_in? && @artist_user.id == current_artist_user.id %>
            <div>
              <%= render 'artist/topics/topic_create_button' %>
            </div>
            <% end %>
          </div>
          <% if @topics.present? %>
            <!--取得したアーティストのトピックス一覧を表示-->
            <%= render 'artist/topics/topic_list', topics: @topics %>
          <% else %>
            <div class="row">
              <p class="text-white mt-3">このArtistの表示できるTopicsはありません。</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>