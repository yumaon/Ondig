<div class="container">
  <div class="row mt-3">
    <div class="col-lg-3 d-flex">
      <%= render 'artist/artist_users/my_page', artist_user: @artist_user %>
    </div>

    <div class="col-lg-9 mt-3">
      <div class="mx-3">
        <h3 class="text-white">My Topics</h3>
      </div>

      <% if @topics.present? %>
        <!--自身が投稿したトピックス一覧の表示-->
        <%= render 'artist/topics/topic_list', topics: @topics %>
      <% else %>
        <p class="text-white mt-3">あなたの投稿したTopicsはありません。</p>
      <% end %>
    </div>
  </div>
</div>
